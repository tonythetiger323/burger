<div class="container">
    <div class="row">
        <div class="col-md-12" align="center">
            <img src="assets/img/IMG_1032.jpg" alt="Eat-Da-Burger">
            <h1>Eat-Da-Burger!</h1>
            <br>
            <br>
            <h2>Add a Burger</h2>
            <p>Enter the Name of Burger You Would Like to Order</p>
            <form class="create-form" action="/api/burgers" method="POST">
                <div class="form-group row w-50">
                    <input type="text" class="form-control form-control-lg text-center" placeholder="Burger Name" name="burger_name">
                </div>
                <button class="btn-primary" type="submit">Submit Order</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="toDevour col-md-4" align="center">
            <h2>Burgers To Eat</h2>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.burger_name}}
                    <form class="create-form" action="/api/burgers/{{this.id}}/update" method="POST">
                        <input name="devoured" value="true">
                        <button class="btn-primary" type="submit"></button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4"></div>
        <div class="devoured center col-md-4" align="center">
            <h2>Burgers That Have Been Eaten</h2>
            {{#each burgers}}
            {{#if this.devoured}}
            <li>

                {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>